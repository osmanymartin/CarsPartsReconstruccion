@model CarsPartsReconstruccion.Models.Piece

    @{
        ViewBag.Title = "Update the Piece Price??";
    }

    <h3>
        The reference price (@String.Format("{0:C}", @ViewBag.PiecePrice)) is too far from the average of the suppliers prices (@String.Format("{0:C}", @Model.piecePrice))

    </h3>

    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>   </legend>

            @Html.HiddenFor(model => model.pieceId)

            <div class="editor-label">
                @Html.LabelFor(model => model.pieceName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.pieceName)
                @Html.ValidationMessageFor(model => model.pieceName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.piecePrice)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.piecePrice)
                @Html.ValidationMessageFor(model => model.piecePrice)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", new { supplierId = @ViewBag.supplierId })
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
