@model IEnumerable<CarsPartsReconstruccion.Models.UserProfile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserId })
            </td>
        </tr>

        <tr>
            <td>
                @foreach (var rolesItem in item.webpages_Roles)
                {
                    <div class="display-label">
                        @Html.DisplayFor(modelItem => rolesItem.RoleName)
                    </div>
                }
            </td>
            <td></td>
        </tr>
    }

</table>
